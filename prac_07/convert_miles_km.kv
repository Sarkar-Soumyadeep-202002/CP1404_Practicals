BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_distance_miles
            text:"34"
            font_size: 48
        BoxLayout:
            orientation: "vertical"
            Button:
                text:"Up"
                on_press: app.handle_increment(1)
            Button:
                text:"Down"
                on_press: app.handle_increment(-1)
    Button:
        text: "Convert miles to km"
        on_press: app.handle_calculation()
    Label:
        id: output_label
        text: "54.717"
        font_size: 48
        color:(1, 1, 0, 1)
